{
  "name": "basketball-stats-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:vite": "remix vite:build",
    "dev:vite": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "preview": "vite preview",
    "dev": "run-p dev:*",
    "build": "run-s build:*",
    "dev:css": "tailwindcss -i app/tailwind.css -o public/styles.css --watch",
    "build:css": "tailwindcss -i app/tailwind.css -o public/styles.css",
    "__dev:js": "esbuild src/*.ts --bundle --target=es2020 --watch --sourcemap --outdir=scripts --servedir=.",
    "__build:js": "esbuild index.ts --bundle --minify --target=es2020 --outfile=index.js",
    "format": "prettier . --write"
  },
  "keywords": [],
  "author": "Sam Johnston",
  "license": "ISC",
  "dependencies": {
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@faker-js/faker": "^8.4.1",
    "@tailwindcss/cli": "^4.0.0-alpha.6",
    "esbuild": "^0.20.1",
    "localforage": "^1.10.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
